---
interface Props {
	title: string;
	description: string;
    year: string;
}

const {description,  title, year} = Astro.props;
---

<div class="absolute w-3 h-3 bg-green-400 rounded-full -start-1.5 border border-white dark:border-gray-900 dark:bg-lime-400">
</div>

<time class="mb-1 text-sm font-normal leading-none text-dark dark:text-white">
    {year}
</time>

<h2 class="text-lg font-semibold text-gray-900 dark:text-white">
    {title}
</h2>

<p class="mb-4 text-base font-normal text-gray-800 dark:text-yellow-200">
    {description}
</p>
