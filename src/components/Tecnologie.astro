
---
interface Props {
	name: string;
}

const {name} = Astro.props;
---

<div class="flex flex-col w-28 h-28 items-center border-black rounded-2xl border-4  shadow dark:border-white bg-transparent  justify-center">
    <div class='flex mt-2 px-3 py-3 object-fill w-20 h-20 items-center justify-center overflow-hidden'>
        <slot />
    </div>
    <div>
        <span class='font-sans' >{name}</span>
    </div>     
</div>